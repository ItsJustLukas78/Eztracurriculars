#:kivy 2.1.0

WindowManager:
    MainWindow:
    BrowseWindow:

<MainWindow>:
    name: "Main"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                pos: self.pos
                size: self.size
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.3, 0.3
            spacing: "10dp"
            Label:
                text: "Eztracurriculars"
                font_size: "20sp"
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                size_hint: 1, 0.75
                text: "Find extracurriculars"
                color: 1, 1, 1, 1
                background_color: 0.3, 0.3, 0.3, 1
                on_press: root.start_button_click()
                on_release: app.root.current = "Browse"

<BrowseWindow>:
    name: "Browse"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Label:
                size_hint: 1, 1
                text: "Eztracurriculars"
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Button:
                size_hint: 0.05, 1
                text: "X"
                color: 1, 1, 1, 1
                background_color: 0.3, 0.3, 0.3, 1
                on_press: root.start_button_click()
                on_release: app.root.current = "Main"
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            ScrollView:
                StackLayout:
                    cols: 1
                    size_hint: 1, None
                    height: 1000
                    spacing: "10dp"
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 0.2
                        Label:
                            text: "What interests you? Feel free to type any keywords\nseperated by commas to find extracurriculars."
                            canvas.before:
                                Color:
                                    rgba: 0.2, 0.1, 0.2, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        TextInput:
                            text: "Input"
                            color: 1, 1, 1, 1
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 0.2
                        Label:
                            text: "What time are you available for an extracurricular?"
                            canvas.before:
                                Color:
                                    rgba: 0.2, 0.1, 0.2, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        TextInput:
                            text: "Input"
                            color: 1, 1, 1, 1
            ScrollView:
                StackLayout:
                    cols: 1
                    size_hint: 1, None
                    height: 1000
                    spacing: "10dp"
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 0.2
                        Label:
                            text: "Whats your name?"
                            canvas.before:
                                Color:
                                    rgba: 0.2, 0.1, 0.2, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        TextInput:
                            text: "Input"
                            color: 1, 1, 1, 1
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 1, 0.2
                        Label:
                            text: "Whats your name?"
                            canvas.before:
                                Color:
                                    rgba: 0.2, 0.1, 0.2, 1
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        TextInput:
                            text: "Inout"
                            color: 1, 1, 1, 1
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.05
            Button:
                size_hint: 0.5, 1
                text: "Submit form "
                color: 1, 1, 1, 1
                background_color: 0.3, 0.3, 0.3, 1
                on_press: root.start_button_click()
                on_release: app.root.current = "Main"
            Label:
                size_hint: 0.5, 1
                text: "Thanks for using this application. Developed by Lukas."
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size